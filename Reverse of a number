import java.util.*;

public class ReverseNumber{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        System.out.print("enter the number: ");
        int num=sc.nextInt();
        int rem,rev=0;
        while(num!=0)
        {
            rem=num%10;
            rev=rev*10+rem;
            num/=10;
        }
        System.out.println("reverse of a number: "+rev);
        
    }
    
}
